{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*":              ["./*"],
      "@components/*":    ["./app/_components/*"],
      "@styles/*":        ["./app/_styles/*"],
      "@jdistyles/*":     ["./app/justdoit/_styles/*"],
      "@jdistore":        ["./app/justdoit/_store.ts"],
      "@jditypes":        ["./app/justdoit/_types.ts"],
      "@jdiutils":        ["./app/justdoit/_utils.ts"],
      "@jdicomponents/*": ["./app/justdoit/_components/*"],
      "@mixstyles/*":     ["./app/musique/_styles/*"],
      "@mixcomponents/*": ["./app/musique/_components/*"],
      "@mixstore":        ["./app/musique/_store.ts"],
      "@mixtypes":        ["./app/musique/_types.ts"],
      "@mixutils":        ["./app/musique/_utils.ts"],
      "@qnastyles/*":     ["./app/qna/_styles/*"],
      "@qnacomponents/*": ["./app/qna/_components/*"],
      "@qnastore":        ["./app/qna/_store.ts"],
      "@qnatypes":        ["./app/qna/_types.ts"],
      "@qnautils":        ["./app/qna/_utils.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
